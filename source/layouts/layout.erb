<!doctype html>

<!--[if lt IE 9 ]>    <html class="no-js oldIE"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html class="no-js" > <!--<![endif]-->
  <head>
    <meta charset="utf-8">
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sravya Gudipudi</title>
    <%= stylesheet_link_tag "app" , :relative => true %>
    <%= javascript_include_tag  "main" , :relative => true %>
  </head>
  <body class="<%= page_classes %>">
    <div class="head-img"></div>
	<div class="main">
	<header>
		<div class="site-logo">
    		<% link_to '/index.html',:relative => true do %>
  				<%= image_tag  "../images/common/logo.png" , :relative => true %>
			<% end %>
		</div> 
		<div class="menu-link"><a class="active" href="#">MENU</a></div>
		<nav class="menu">
			<ul>
				<% data.nav.links.each do |links| %>
					<li class="<% if links.sub_menu %>has-submenu<% end %> <% if links.is_last %>blue-bar<% end %>" index=<%=links.list_index%>>
						<% if links.is_last %>
							 <%=link_to links.name,links.link,:class=>"desktop-link"%> 
							 <%=link_to links.mobile_name,links.link,:class=>"mobile-link ion-chevron-right"%>
						<%else%> 
							<%=link_to links.name,links.link,:class=>"desktop-link",:relative=> true%>
							<%=link_to links.mobile_name,'#',:class=>"mobile-link ion-chevron-right"%>
						<% end %>
						<% if links.sub_menu %>
							<ul class="sub-menu">
							     <li class="back-link"><a class="ion-chevron-left">BACK</a></li>
							    <li class="sub-top-link"><%=link_to links.name,links.link,:class=>"ion-chevron-right"%></li>
								<% links.sub_menu.each do |sub_link| %>
									<li>   
 										<%=link_to sub_link.name,sub_link.link,:class=>"ion-chevron-right"%>
									</li>
									<%if sub_link.sub_menu %>
									<% sub_link.sub_menu.each do |sub_link2| %>
										<li class="mobile-only-links">   
	 										<%=link_to sub_link2.name,sub_link2.link,:class=>"ion-chevron-right",:relative=> true%>
										</li>
										<% end %>
									<% end %>
								<% end %>
							</ul>
						<% end %>
					</li>
				<% end %>
			</ul>
		</nav>
	  <!-- </div>	 -->
	 <!--  </div> -->
	</header>
	<section class="main_content" role="main">
			<%=yield%>
		</section>
</div>
<footer>
	<div class="footer-inner">
		<div class="copyright">
		 Â©2015, gudipudi, All rights reserved.
	</div>
	</div>
	
	</footer>
  </body>
</html>